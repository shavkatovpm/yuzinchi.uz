---
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/CTA.astro';

const team = [
  {
    name: "Yuzinchi Team",
    role: "Marketing mutaxassislari",
    description: "Biz - tajribali raqamli marketing mutaxassislari jamoasi. Har bir loyihaga individual yondashib, biznesingiz uchun eng yaxshi natijalarni ta'minlaymiz."
  }
];

const values = [
  {
    title: "Natija",
    description: "Biz faqat klik emas, haqiqiy mijozlar va sotuvlar uchun ishlaymiz"
  },
  {
    title: "Shaffoflik",
    description: "Har bir so'm qayerga ketganini ko'rsatamiz, yashiradigan hech narsamiz yo'q"
  },
  {
    title: "Innovatsiya",
    description: "Yangi trendlar va texnologiyalarni doimo o'rganib, qo'llaymiz"
  },
  {
    title: "Sheriklik",
    description: "Biz sizning biznesingizning bir qismi sifatida ishlaymiz"
  }
];
---

<BaseLayout
  title="Biz haqimizda - Yuzinchi Marketing Agency"
  description="Yuzinchi - O'zbekistondagi professional raqamli marketing agentligi. Instagram, Telegram va Google Ads bo'yicha mutaxassislar."
>
  <section class="section-padding">
    <div class="container-custom">
      <div class="mx-auto max-w-4xl">
        <!-- Header -->
        <div class="text-center">
          <h1 class="text-4xl font-bold text-dark dark:text-light md:text-5xl">
            Biz haqimizda
          </h1>
          <p class="mx-auto mt-4 max-w-2xl text-lg text-dark/60 dark:text-light/60">
            Yuzinchi - O'zbekistondagi professional raqamli marketing agentligi
          </p>
        </div>

        <!-- Story -->
        <div class="mt-16">
          <div class="rounded-2xl border border-dark/5 bg-light p-8 dark:border-light/5 dark:bg-dark md:p-12">
            <h2 class="text-2xl font-bold text-dark dark:text-light">Bizning tariximiz</h2>
            <div class="mt-4 space-y-4 text-dark/70 dark:text-light/70">
              <p>
                Yuzinchi marketing agentligi kichik va o'rta biznes egalariga yordam berish maqsadida tashkil etilgan. Biz reklama bozorida ko'p yillik tajribaga ega mutaxassislardan iborat jamoamiz.
              </p>
              <p>
                Bizning maqsadimiz oddiy - har bir biznesga professional va samarali reklama xizmatlarini taqdim etish. Biz katta agentliklarning sifatini kichik agentlikning shaxsiy yondashuvini birlashtiramiz.
              </p>
              <p>
                Har bir mijoz biz uchun muhim. Shuning uchun biz cheksiz mijozlar bilan emas, balki cheklangan miqdordagi loyihalar bilan ishlaymiz - har biriga maksimal e'tibor berishimiz uchun.
              </p>
            </div>
          </div>
        </div>

        <!-- Values -->
        <div class="mt-16">
          <h2 class="text-center text-2xl font-bold text-dark dark:text-light md:text-3xl">
            Bizning qadriyatlarimiz
          </h2>
          <div class="mt-8 grid gap-6 md:grid-cols-2">
            {values.map((value) => (
              <div class="rounded-xl border border-dark/5 bg-light p-6 dark:border-light/5 dark:bg-dark">
                <h3 class="font-semibold text-accent">{value.title}</h3>
                <p class="mt-2 text-dark/60 dark:text-light/60">{value.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Why Choose Us -->
        <div class="mt-16 rounded-2xl bg-gradient-to-br from-accent/10 to-accent/5 p-8 md:p-12">
          <h2 class="text-center text-2xl font-bold text-dark dark:text-light md:text-3xl">
            Nega aynan biz?
          </h2>
          <div class="mt-6 space-y-4 text-dark/70 dark:text-light/70">
            <ul class="ml-4 list-disc space-y-3">
              <li><strong>Lokal tajriba:</strong> Biz O'zbekiston bozorini yaxshi bilamiz</li>
              <li><strong>To'liq xizmat:</strong> Strategiyadan tortib, amalga oshirish va tahlilgacha</li>
              <li><strong>Shaffof narxlar:</strong> Yashirin to'lovlar yo'q, hamma narsa oldindan ma'lum</li>
              <li><strong>Natijaga kafolat:</strong> Agar natija bo'lmasa, biz optimizatsiya qilamiz</li>
              <li><strong>Tezkor aloqa:</strong> Telegram orqali 24 soat ichida javob</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>
