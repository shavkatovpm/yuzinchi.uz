---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactForm from '../../components/ContactForm.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout
  title="Aloqa - Yuzinchi Marketing Agency"
  description="Biz bilan bog'laning. Biznesingiz uchun professional reklama xizmatlarini muhokama qilish uchun bepul maslahat oling."
>
  <section class="section-padding">
    <div class="container-custom">
      <div class="mx-auto max-w-3xl text-center">
        <h1 class="text-4xl font-bold text-light md:text-5xl">
          {t('contact.title')}
        </h1>
        <p class="mt-4 text-lg text-light/60">
          {t('contact.subtitle')}
        </p>
      </div>

      <div class="mt-12 grid gap-12 lg:grid-cols-2">
        <!-- Contact Form -->
        <div class="rounded-2xl border border-light/5 bg-dark p-6 shadow-sm md:p-8">
          <ContactForm />
        </div>

        <!-- Contact Info -->
        <div class="space-y-8">
          <!-- Phone -->
          <div class="flex gap-4">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-accent/10 text-accent">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 002.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 01-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 00-1.091-.852H4.5A2.25 2.25 0 002.25 4.5v2.25z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-light">Telefon</h3>
              <a href="tel:+998901234567" class="mt-1 text-light/60 hover:text-accent">
                +998 90 123 45 67
              </a>
            </div>
          </div>

          <!-- Email -->
          <div class="flex gap-4">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-accent/10 text-accent">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-light">Email</h3>
              <a href="mailto:info@yuzinchi.uz" class="mt-1 text-light/60 hover:text-accent">
                info@yuzinchi.uz
              </a>
            </div>
          </div>

          <!-- Telegram -->
          <div class="flex gap-4">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-accent/10 text-accent">
              <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-light">Telegram</h3>
              <a href="https://t.me/yuzinchi" target="_blank" rel="noopener" class="mt-1 text-light/60 hover:text-accent">
                @yuzinchi
              </a>
            </div>
          </div>

          <!-- Location -->
          <div class="flex gap-4">
            <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-accent/10 text-accent">
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            </div>
            <div>
              <h3 class="font-semibold text-light">Manzil</h3>
              <p class="mt-1 text-light/60">
                Toshkent, O'zbekiston
              </p>
            </div>
          </div>

          <!-- Working Hours -->
          <div class="rounded-xl border border-light/5 bg-light/[0.02] p-6">
            <h3 class="font-semibold text-light">Ish vaqti</h3>
            <div class="mt-3 space-y-2 text-sm text-light/60">
              <div class="flex justify-between">
                <span>Dushanba - Juma</span>
                <span>09:00 - 18:00</span>
              </div>
              <div class="flex justify-between">
                <span>Shanba</span>
                <span>10:00 - 15:00</span>
              </div>
              <div class="flex justify-between">
                <span>Yakshanba</span>
                <span>Dam olish</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
