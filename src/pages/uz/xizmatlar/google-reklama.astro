---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CTA from '../../../components/CTA.astro';

const features = [
  {
    title: "Qidiruv reklamasi",
    description: "Google'da qidirayotgan mijozlarga birinchi bo'lib ko'rinish"
  },
  {
    title: "Display reklama",
    description: "Millionlab saytlarda banner reklama ko'rsatish"
  },
  {
    title: "YouTube reklama",
    description: "Video reklama orqali keng auditoriyaga yetib borish"
  },
  {
    title: "Shopping reklamasi",
    description: "Mahsulotlaringizni Google Shopping'da ko'rsatish"
  },
  {
    title: "Remarketing",
    description: "Saytga tashrif buyurgan mijozlarga qayta reklama"
  },
  {
    title: "Konversiya kuzatish",
    description: "Har bir so'mning samaradorligini o'lchash"
  }
];
---

<BaseLayout
  title="Google Reklama - Yuzinchi Marketing Agency"
  description="Google Ads orqali mahsulot yoki xizmat qidirayotgan mijozlarni toping. Professional Google reklama xizmatlari."
>
  <section class="section-padding">
    <div class="container-custom">
      <div class="mx-auto max-w-4xl">
        <!-- Header -->
        <div class="text-center">
          <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-green-400 to-blue-500">
            <svg class="h-8 w-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"/>
            </svg>
          </div>
          <h1 class="text-4xl font-bold text-light md:text-5xl">
            Google Reklama
          </h1>
          <p class="mx-auto mt-4 max-w-2xl text-lg text-light/60">
            Mahsulot yoki xizmat qidirayotgan mijozlarni topamiz. Google - dunyodagi eng katta qidiruv tizimi, va biz sizni aynan kerakli odamlarga ko'rsatamiz.
          </p>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-6 rounded-2xl border border-light/5 bg-light/[0.02] p-6 md:p-8">
          <div class="text-center">
            <div class="text-3xl font-bold text-accent md:text-4xl">90%</div>
            <div class="mt-1 text-sm text-light/60">Qidiruv bozori ulushi</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-accent md:text-4xl">5-10x</div>
            <div class="mt-1 text-sm text-light/60">O'rtacha ROI</div>
          </div>
          <div class="text-center">
            <div class="text-3xl font-bold text-accent md:text-4xl">24/7</div>
            <div class="mt-1 text-sm text-light/60">Ishlash vaqti</div>
          </div>
        </div>

        <!-- Features -->
        <div class="mt-16">
          <h2 class="text-center text-2xl font-bold text-light md:text-3xl">
            Google Ads turlari
          </h2>
          <div class="mt-8 grid gap-6 md:grid-cols-2">
            {features.map((feature) => (
              <div class="rounded-xl border border-light/5 bg-dark p-6">
                <h3 class="font-semibold text-light">{feature.title}</h3>
                <p class="mt-2 text-sm text-light/60">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Advantage -->
        <div class="mt-16 rounded-2xl bg-gradient-to-br from-green-400/10 to-blue-500/10 p-8">
          <h2 class="text-center text-2xl font-bold text-light md:text-3xl">
            Google Ads afzalligi
          </h2>
          <div class="mt-6 space-y-4 text-light/70">
            <p>Google Ads boshqa reklamalardan farq qiladi:</p>
            <ul class="ml-4 list-disc space-y-2">
              <li><strong>Intent-based:</strong> Foydalanuvchi o'zi qidirayotgani uchun sotib olishga tayyor</li>
              <li><strong>Aniq o'lchov:</strong> Har bir klik, konversiya va sotuvni kuzatish mumkin</li>
              <li><strong>Moslashuvchan byudjet:</strong> Istagan vaqtda byudjetni oshirish yoki kamaytirish</li>
              <li><strong>Tezkor natija:</strong> Reklama yoqilgandan so'ng darhol trafik keladi</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>
