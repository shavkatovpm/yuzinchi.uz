---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import CTA from '../../../components/CTA.astro';

const features = [
  {
    title: "Qidiruv reklamasi",
    description: "Google'da qidirayotgan mijozlarga birinchi bo'lib ko'rinish"
  },
  {
    title: "Display reklama",
    description: "Millionlab saytlarda banner reklama ko'rsatish"
  },
  {
    title: "YouTube reklama",
    description: "Video reklama orqali keng auditoriyaga yetib borish"
  },
  {
    title: "Shopping reklamasi",
    description: "Mahsulotlaringizni Google Shopping'da ko'rsatish"
  },
  {
    title: "Remarketing",
    description: "Saytga tashrif buyurgan mijozlarga qayta reklama"
  },
  {
    title: "Konversiya kuzatish",
    description: "Har bir so'mning samaradorligini o'lchash"
  }
];
---

<BaseLayout
  title="Googleda reklama yoqish xizmati"
  description="Google Ads orqali mahsulot yoki xizmat qidirayotgan mijozlarni toping. Professional Google reklama xizmatlari."
>
  <section class="section-padding">
    <div class="container-custom">
      <div class="mx-auto max-w-4xl">
        <!-- Header -->
        <div class="text-center">
          <div class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-2xl border border-light/10 bg-light/5">
            <svg class="h-8 w-8 text-light/70" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="11" cy="11" r="8"/>
              <path d="M21 21L16.65 16.65"/>
            </svg>
          </div>
          <h1 class="text-4xl font-bold text-light md:text-5xl">
            Google Reklama
          </h1>
          <p class="mx-auto mt-6 max-w-2xl text-lg text-light/60 leading-relaxed">
            Mahsulot yoki xizmat qidirayotgan mijozlarni topamiz. Google - dunyodagi eng katta qidiruv tizimi, va biz sizni aynan kerakli odamlarga ko'rsatamiz.
          </p>
        </div>

        <!-- Stats -->
        <div class="mt-12 grid grid-cols-3 gap-4">
          <div class="rounded-xl border border-light/5 bg-light/[0.02] p-4 text-center">
            <div class="text-2xl font-bold text-accent md:text-3xl">90%</div>
            <div class="mt-1 text-xs text-light/60">Bozor ulushi</div>
          </div>
          <div class="rounded-xl border border-light/5 bg-light/[0.02] p-4 text-center">
            <div class="text-2xl font-bold text-accent md:text-3xl">5-10x</div>
            <div class="mt-1 text-xs text-light/60">ROI</div>
          </div>
          <div class="rounded-xl border border-light/5 bg-light/[0.02] p-4 text-center">
            <div class="text-2xl font-bold text-accent md:text-3xl">24/7</div>
            <div class="mt-1 text-xs text-light/60">Ishlash</div>
          </div>
        </div>

        <!-- Features -->
        <div class="mt-16">
          <h2 class="text-center text-2xl font-bold text-light md:text-3xl">
            Google Ads turlari
          </h2>
          <div class="mt-8 grid gap-6 md:grid-cols-2">
            {features.map((feature) => (
              <div class="rounded-xl border border-light/5 bg-dark p-6">
                <h3 class="font-semibold text-light">{feature.title}</h3>
                <p class="mt-2 text-sm text-light/60">{feature.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Advantage -->
        <div class="mt-16 rounded-2xl border border-light/5 bg-light/[0.02] p-8">
          <h2 class="text-center text-2xl font-bold text-light md:text-3xl">
            Google Ads afzalligi
          </h2>
          <div class="mt-6 space-y-4 text-light/70">
            <p>Google Ads boshqa reklamalardan farq qiladi:</p>
            <ul class="ml-4 list-disc space-y-2">
              <li><strong>Intent-based:</strong> Foydalanuvchi o'zi qidirayotgani uchun sotib olishga tayyor</li>
              <li><strong>Aniq o'lchov:</strong> Har bir klik, konversiya va sotuvni kuzatish mumkin</li>
              <li><strong>Moslashuvchan byudjet:</strong> Istagan vaqtda byudjetni oshirish yoki kamaytirish</li>
              <li><strong>Tezkor natija:</strong> Reklama yoqilgandan so'ng darhol trafik keladi</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <CTA />
</BaseLayout>
