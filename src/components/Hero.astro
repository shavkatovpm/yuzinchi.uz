---
import { getLangFromUrl, useTranslations, pageUrls } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const urls = pageUrls[lang];
---

<section class="relative overflow-hidden bg-dark">
  <!-- Background decoration -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute left-1/2 top-0 h-[500px] w-[500px] -translate-x-1/2 -translate-y-1/2 rounded-full bg-accent/10 blur-3xl"></div>
    <div class="absolute bottom-0 right-0 h-[400px] w-[400px] translate-x-1/2 translate-y-1/2 rounded-full bg-accent/5 blur-3xl"></div>
  </div>

  <div class="container-custom py-12 md:py-16 lg:py-20">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Badge -->
      <div class="mb-8 inline-flex items-center gap-1.5 rounded-full border border-accent/20 bg-accent/10 px-3 py-1.5 text-xs font-medium text-accent md:mb-12 md:gap-3 md:px-6 md:py-2.5 md:text-lg">
        <span>Instagram Target</span>
        <span class="relative flex h-1.5 w-1.5 md:h-2.5 md:w-2.5">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-accent opacity-75"></span>
          <span class="relative inline-flex h-1.5 w-1.5 rounded-full bg-accent md:h-2.5 md:w-2.5"></span>
        </span>
        <span>Telegram Ads</span>
        <span class="relative flex h-1.5 w-1.5 md:h-2.5 md:w-2.5">
          <span class="absolute inline-flex h-full w-full animate-ping rounded-full bg-accent opacity-75"></span>
          <span class="relative inline-flex h-1.5 w-1.5 rounded-full bg-accent md:h-2.5 md:w-2.5"></span>
        </span>
        <span>Google Ads</span>
      </div>

      <!-- Heading - Animated text -->
      <h1 class="text-3xl font-bold tracking-tight text-light sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl">
        <span id="animated-heading" class="inline-block transition-all duration-500" style="filter: blur(0px);">
          {lang === 'uz' ? "Instagram target orqali sotib oladigan mijozlarni olib kelamiz" : lang === 'ru' ? "Привлекаем покупающих клиентов через Instagram таргет" : "We bring buying customers through Instagram targeting"}
        </span>
      </h1>

      <!-- CTAs -->
      <div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a
          href={urls.contact}
          class="inline-flex h-12 items-center justify-center rounded-lg bg-accent px-8 text-base font-semibold text-light shadow-lg shadow-accent/25 transition-all hover:bg-accent/90 hover:shadow-xl hover:shadow-accent/30"
        >
          {t('hero.cta')}
        </a>
        <a
          href={urls.services}
          class="hidden h-12 items-center justify-center gap-2 rounded-lg border border-light/10 bg-dark px-8 text-base font-semibold text-light transition-colors hover:bg-light/5 sm:inline-flex"
        >
          {t('hero.cta.secondary')}
          <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>

      <!-- Stats -->
      <div class="mt-16 grid grid-cols-3 gap-8 border-t border-light/5 pt-12">
        <div>
          <div class="text-3xl font-bold text-accent md:text-4xl">2+</div>
          <div class="mt-1 text-sm text-light/60">
            {lang === 'uz' ? 'Yillik tajriba' : lang === 'ru' ? 'Лет опыта' : 'Years of experience'}
          </div>
        </div>
        <div>
          <div class="text-3xl font-bold text-accent md:text-4xl">97%</div>
          <div class="mt-1 text-sm text-light/60">
            {lang === 'uz' ? 'Mamnun mijozlar' : lang === 'ru' ? 'Довольных клиентов' : 'Satisfied clients'}
          </div>
        </div>
        <div>
          <div class="text-3xl font-bold text-accent md:text-4xl">10+</div>
          <div class="mt-1 text-sm text-light/60">
            {lang === 'uz' ? 'Muvaffaqiyatli loyihalar' : lang === 'ru' ? 'Успешных проектов' : 'Successful projects'}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script define:vars={{ lang }}>
  const headingTexts = {
    uz: [
      "Instagram target orqali sotib oladigan mijozlarni olib kelamiz",
      "Telegram ads bilan o'lchanadigan natija ko'rsatamiz",
      "Google ads orqali sizni izlayotgan mijozlarni ushlab qolamiz"
    ],
    ru: [
      "Привлекаем покупающих клиентов через Instagram таргет",
      "Telegram Ads — надёжный трафик и измеримые результаты",
      "Google Ads — ловим клиентов, которые ищут вас"
    ],
    en: [
      "We bring buying customers through Instagram targeting",
      "Telegram Ads for reliable traffic and measurable results",
      "Google Ads to catch customers searching for you"
    ]
  };

  function initHeadingAnimation() {
    const heading = document.getElementById('animated-heading');
    if (!heading) return;

    const texts = headingTexts[lang] || headingTexts.uz;
    let currentIndex = 0;

    setInterval(() => {
      // Blur out
      heading.style.opacity = '0';
      heading.style.filter = 'blur(10px)';

      setTimeout(() => {
        currentIndex = (currentIndex + 1) % texts.length;
        heading.textContent = texts[currentIndex];
        // Blur in
        heading.style.opacity = '1';
        heading.style.filter = 'blur(0px)';
      }, 500);
    }, 4000);
  }

  initHeadingAnimation();
  document.addEventListener('astro:after-swap', initHeadingAnimation);
</script>
