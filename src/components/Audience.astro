---

<section class="section-padding">
  <div class="container-custom">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold text-light md:text-4xl">
        {t('audience.title')}
      </h2>
    </div>

    <div class="mt-12 grid gap-4 sm:grid-cols-2 lg:grid-cols-4">
      {audiences.map((audience, index) => (
        <div
          class="group flex items-center gap-4 rounded-xl border border-light/5 bg-dark p-5 transition-all hover:border-accent/20 hover:shadow-lg hover:shadow-accent/5"
        >
          <div class="flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-accent/10 text-accent">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" set:html={audience.icon} />
          </div>
          <span class="font-medium text-light">
            {audience.title}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
