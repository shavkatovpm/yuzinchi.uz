---
import { getAlternateLinks, type Lang } from '../i18n/utils';

interface Props {
  title: string;
  description: string;
  image?: string;
  lang: Lang;
  type?: 'website' | 'article';
  publishedTime?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  image = '/og-image.jpg',
  lang,
  type = 'website',
  publishedTime,
  noindex = false
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);
const alternateLinks = getAlternateLinks(Astro.url);

const langCodes: Record<Lang, string> = {
  uz: 'uz-UZ',
  en: 'en-US',
  ru: 'ru-RU'
};

const schemaOrgWebsite = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Yuzinchi',
  url: Astro.site?.toString(),
  potentialAction: {
    '@type': 'SearchAction',
    target: `${Astro.site}search?q={search_term_string}`,
    'query-input': 'required name=search_term_string'
  }
};

const schemaOrgOrganization = {
  '@context': 'https://schema.org',
  '@type': 'LocalBusiness',
  '@id': Astro.site?.toString(),
  name: 'Yuzinchi Marketing Agency',
  description: 'Professional digital marketing agency in Uzbekistan',
  url: Astro.site?.toString(),
  logo: new URL('/logo.png', Astro.site).toString(),
  image: imageURL.toString(),
  address: {
    '@type': 'PostalAddress',
    addressCountry: 'UZ',
    addressLocality: 'Tashkent'
  },
  sameAs: [
    'https://t.me/yuzinchi',
    'https://instagram.com/yuzinchi'
  ],
  priceRange: '$$',
  serviceType: ['Instagram Advertising', 'Telegram Advertising', 'Google Ads']
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Alternate Language Links -->
{alternateLinks.map(({ lang: altLang, url }) => (
  <link rel="alternate" hreflang={langCodes[altLang]} href={new URL(url, Astro.site)} />
))}
<link rel="alternate" hreflang="x-default" href={new URL('/uz', Astro.site)} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:locale" content={langCodes[lang]} />
{alternateLinks.filter(l => l.lang !== lang).map(({ lang: altLang }) => (
  <meta property="og:locale:alternate" content={langCodes[altLang]} />
))}

{type === 'article' && publishedTime && (
  <meta property="article:published_time" content={publishedTime} />
)}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />

<!-- Schema.org -->
<script type="application/ld+json" set:html={JSON.stringify(schemaOrgWebsite)} />
<script type="application/ld+json" set:html={JSON.stringify(schemaOrgOrganization)} />
