    { name: t('services.instagram.title'), href: services.instagram },
    { name: t('services.telegram.title'), href: services.telegram },
    { name: t('services.google.title'), href: services.google },
  ],
  company: [
    { name: t('nav.about'), href: urls.about },
    { name: t('nav.blog'), href: urls.blog },
    { name: t('nav.contact'), href: urls.contact },
  ]
};

