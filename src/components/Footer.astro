---

<footer class="border-t border-dark/5 bg-light dark:border-light/5 dark:bg-dark">
  <div class="container-custom py-12 md:py-16">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Brand -->
      <div class="lg:col-span-1">
        <a href={urls.home} class="flex items-center gap-2 text-xl font-bold text-dark dark:text-light">
          <span class="flex h-9 w-9 items-center justify-center rounded-lg bg-dark text-lg font-black text-accent">
            100
          </span>
          <span>Yuzinchi</span>
        </a>
        <p class="mt-4 text-sm text-dark/60 dark:text-light/60">
          {t('footer.description')}
        </p>
        <div class="mt-6 flex gap-4">
          {socialLinks.map((link) => (
            <a
              href={link.href}
              target="_blank"
              rel="noopener noreferrer"
              class="flex h-10 w-10 items-center justify-center rounded-lg border border-dark/10 text-dark/60 transition-colors hover:border-accent hover:text-accent dark:border-light/10 dark:text-light/60 dark:hover:border-accent dark:hover:text-accent"
              aria-label={link.name}
            >
              <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" set:html={link.icon} />
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-dark dark:text-light">
          {t('footer.services')}
        </h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-dark/60 transition-colors hover:text-accent dark:text-light/60 dark:hover:text-accent"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-dark dark:text-light">
          {t('footer.company')}
        </h3>
        <ul class="mt-4 space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-dark/60 transition-colors hover:text-accent dark:text-light/60 dark:hover:text-accent"
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-sm font-semibold uppercase tracking-wider text-dark dark:text-light">
          {t('footer.contact')}
        </h3>
        <ul class="mt-4 space-y-3">
          <li>
            <a
              href="tel:+998901234567"
              class="text-sm text-dark/60 transition-colors hover:text-accent dark:text-light/60 dark:hover:text-accent"
            >
              +998 90 123 45 67
            </a>
          </li>
          <li>
            <a
              href="mailto:info@yuzinchi.uz"
              class="text-sm text-dark/60 transition-colors hover:text-accent dark:text-light/60 dark:hover:text-accent"
            >
              info@yuzinchi.uz
            </a>
          </li>
          <li>
            <span class="text-sm text-dark/60 dark:text-light/60">
              Toshkent, O'zbekiston
            </span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-dark/5 pt-8 dark:border-light/5 sm:flex-row">
      <p class="text-sm text-dark/60 dark:text-light/60">
        &copy; {currentYear} Yuzinchi. {t('footer.rights')}.
      </p>
    </div>
  </div>
</footer>
