// Telegram icon
const telegramIcon = `<path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>`;

// Google icon
const googleIcon = `<path d="M12.48 10.92v3.28h7.84c-.24 1.84-.853 3.187-1.787 4.133-1.147 1.147-2.933 2.4-6.053 2.4-4.827 0-8.6-3.893-8.6-8.72s3.773-8.72 8.6-8.72c2.6 0 4.507 1.027 5.907 2.347l2.307-2.307C18.747 1.44 16.133 0 12.48 0 5.867 0 .307 5.387.307 12s5.56 12 12.173 12c3.573 0 6.267-1.173 8.373-3.36 2.16-2.16 2.84-5.213 2.84-7.667 0-.76-.053-1.467-.173-2.053H12.48z"/>`;

const services = [
  // Instagram Row
  {
    icon: instagramIcon,
    title: t('services.instagram.target.title'),
    description: t('services.instagram.target.desc'),
    href: urls.instagram,
    gradient: 'from-pink-500 to-purple-500',
    platform: 'instagram'
  },
  {
    icon: instagramIcon,
    title: t('services.instagram.reels.title'),
    description: t('services.instagram.reels.desc'),
    href: urls.instagram,
    gradient: 'from-purple-500 to-pink-500',
    platform: 'instagram'
  },
  // Telegram Row
  {
    icon: telegramIcon,
    title: t('services.telegram.ads.title'),
    description: t('services.telegram.ads.desc'),
    href: urls.telegram,
    gradient: 'from-blue-400 to-blue-600',
    platform: 'telegram'
  },
  {
    icon: telegramIcon,
    title: t('services.telegram.channels.title'),
    description: t('services.telegram.channels.desc'),
    href: urls.telegram,
    gradient: 'from-blue-500 to-cyan-500',
    platform: 'telegram'
  },
  // Google Row
  {
    icon: googleIcon,
    title: t('services.google.search.title'),
    description: t('services.google.search.desc'),
    href: urls.google,
    gradient: 'from-green-400 to-blue-500',
    platform: 'google'
  },
  {
    icon: googleIcon,
    title: t('services.google.display.title'),
    description: t('services.google.display.desc'),
    href: urls.google,
    gradient: 'from-yellow-400 to-red-500',
    platform: 'google'
  }
];
---

<section class="section-padding">
  <div class="container-custom">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold text-dark dark:text-light md:text-4xl">
        {t('services.title')}
      </h2>
      <p class="mt-4 text-lg text-dark/60 dark:text-light/60">
        {t('services.subtitle')}
      </p>
    </div>

    <!-- Services grid with green border -->
    <div class="mt-12 rounded-3xl border-2 border-accent p-6 md:p-8">
      <div class="grid gap-6 md:grid-cols-2">
        {services.map((service, index) => (
          <a
            href={service.href}
            class="group relative overflow-hidden rounded-2xl border border-dark/5 bg-light p-6 transition-all hover:border-accent/30 hover:shadow-xl hover:shadow-accent/10 dark:border-light/5 dark:bg-dark/50"
          >
            <!-- Gradient background on hover -->
            <div class={`absolute inset-0 bg-gradient-to-br ${service.gradient} opacity-0 transition-opacity group-hover:opacity-5`}></div>

            <div class="relative">
              <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-xl bg-accent/10">
                <svg class="h-6 w-6 text-accent" fill="currentColor" viewBox="0 0 24 24" set:html={service.icon} />
              </div>

              <h3 class="text-lg font-semibold text-dark dark:text-light md:text-xl">
                {service.title}
              </h3>
              <p class="mt-2 text-sm text-dark/60 dark:text-light/60 md:text-base">
                {service.description}
              </p>

              <div class="mt-4 inline-flex items-center gap-2 text-sm font-medium text-accent">
                {t('services.learnMore')}
                <svg class="h-4 w-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</section>
