---
// Loading Screen Component
// Mobile: 4 lines (equal width), Desktop: 2 lines
// Prevents scroll during animation
---

<div id="loading-screen" class="loading-screen">
  <div class="loading-content">
    <!-- Mobile: 4 qator - bir xil kenglikda -->
    <div class="mobile-text">
      <div class="text-line line-1" data-line="1">Yuzinchi</div>
      <div class="text-line line-2" data-line="2">bosqichga</div>
      <div class="text-line line-3" data-line="3">chiqishga</div>
      <div class="text-line line-4" data-line="4">tayyormisiz?</div>
    </div>

    <!-- Desktop: 2 qator -->
    <div class="desktop-text">
      <div class="text-line" data-line="1">Yuzinchi bosqichga</div>
      <div class="text-line" data-line="2">chiqishga tayyormisiz?</div>
    </div>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262626;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.5s ease;
    overflow: hidden;
  }

  .loading-screen.fade-out {
    opacity: 0;
    pointer-events: none;
  }

  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    padding: 0 1rem;
  }

  /* Mobile text - 4 qator */
  .mobile-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
  }

  /* Desktop text - 2 qator */
  .desktop-text {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  /* Desktop uchun */
  @media (min-width: 768px) {
    .mobile-text {
      display: none;
    }
    .desktop-text {
      display: flex;
    }
  }

  .text-line {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 700;
    color: #628141;
    letter-spacing: -0.02em;
    text-align: center;
    opacity: 0;
    filter: blur(20px);
    transform: translateY(20px);
    transition: opacity 0.8s ease, filter 0.8s ease, transform 0.8s ease;
    line-height: 1.05;
  }

  /* Mobile - har bir qator uchun alohida size (bir xil kenglik uchun) */
  /* tayyormisiz? = 12 harf - eng uzun, shunga moslashtiramiz */
  .mobile-text .line-1 {
    font-size: 19vw;  /* Yuzinchi = 8 harf - eng katta */
  }
  .mobile-text .line-2 {
    font-size: 17vw;  /* bosqichga = 9 harf */
  }
  .mobile-text .line-3 {
    font-size: 17vw;  /* chiqishga = 9 harf */
  }
  .mobile-text .line-4 {
    font-size: 13vw;  /* tayyormisiz? = 12 harf - eng kichik */
  }

  /* Desktop sizes */
  .desktop-text .text-line {
    font-size: 8vw;
    line-height: 1.1;
  }

  /* Katta ekranlar uchun max size */
  @media (min-width: 1400px) {
    .desktop-text .text-line {
      font-size: 7rem;
    }
  }

  .text-line.visible {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }

  /* Scroll blocker */
  body.no-scroll {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  function initLoadingScreen() {
    const loadingScreen = document.getElementById('loading-screen');
    if (!loadingScreen) return;

    // Faqat birinchi kirishda ko'rsatish
    const hasVisited = sessionStorage.getItem('yuzinchi_visited');

    if (hasVisited) {
      loadingScreen.style.display = 'none';
      return;
    }

    // Scroll ni bloklash
    document.body.classList.add('no-scroll');

    const lines = loadingScreen.querySelectorAll('.text-line');

    // Har bir qatorni ketma-ket animate qilish
    lines.forEach((line, index) => {
      setTimeout(() => {
        line.classList.add('visible');
      }, 100 + (index * 150));
    });

    // Fade out va scroll ni qaytarish
    setTimeout(() => {
      loadingScreen.classList.add('fade-out');
      sessionStorage.setItem('yuzinchi_visited', 'true');

      // Scroll ni qaytarish
      document.body.classList.remove('no-scroll');

      setTimeout(() => {
        loadingScreen.style.display = 'none';
      }, 500);
    }, 2500);
  }

  // DOM tayyor bo'lganda ishga tushirish
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLoadingScreen);
  } else {
    initLoadingScreen();
  }
</script>
