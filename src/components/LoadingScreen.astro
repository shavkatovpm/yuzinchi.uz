---
// Loading Screen Component
// Mobile: 4 lines (equal width via JS), Desktop: 2 lines
// Prevents scroll during animation
---

<div id="loading-screen" class="loading-screen">
  <div class="loading-content">
    <!-- Mobile: 4 qator - bir xil kenglikda -->
    <div class="mobile-text" id="mobile-text">
      <div class="text-line" data-line="1">Yuzinchi</div>
      <div class="text-line" data-line="2">bosqichga</div>
      <div class="text-line" data-line="3">chiqishga</div>
      <div class="text-line" data-line="4">tayyormisiz?</div>
    </div>

    <!-- Desktop: 2 qator -->
    <div class="desktop-text">
      <div class="text-line" data-line="1">Yuzinchi bosqichga</div>
      <div class="text-line" data-line="2">chiqishga tayyormisiz?</div>
    </div>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262626;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.5s ease;
    overflow: hidden;
  }

  .loading-screen.fade-out {
    opacity: 0;
    pointer-events: none;
  }

  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
    max-width: 600px;
  }

  /* Mobile text - 4 qator */
  .mobile-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  /* Desktop text - 2 qator */
  .desktop-text {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  /* Desktop uchun */
  @media (min-width: 768px) {
    .mobile-text {
      display: none;
    }
    .desktop-text {
      display: flex;
    }
    .loading-content {
      max-width: 1200px;
    }
  }

  .text-line {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 700;
    color: #628141;
    letter-spacing: -0.02em;
    text-align: center;
    opacity: 0;
    filter: blur(20px);
    transform: translateY(20px);
    transition: opacity 0.8s ease, filter 0.8s ease, transform 0.8s ease;
    line-height: 1.1;
    white-space: nowrap;
  }

  /* Mobile - boshlang'ich size (JS o'zgartiradi) */
  .mobile-text .text-line {
    font-size: 10vw;
    width: 100%;
  }

  /* Desktop sizes */
  .desktop-text .text-line {
    font-size: 8vw;
    line-height: 1.1;
  }

  /* Katta ekranlar uchun max size */
  @media (min-width: 1400px) {
    .desktop-text .text-line {
      font-size: 7rem;
    }
  }

  .text-line.visible {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }

  /* Scroll blocker */
  body.no-scroll {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  function initLoadingScreen() {
    const loadingScreen = document.getElementById('loading-screen');
    const mobileText = document.getElementById('mobile-text');
    if (!loadingScreen) return;

    // Faqat birinchi kirishda ko'rsatish
    const hasVisited = sessionStorage.getItem('yuzinchi_visited');

    if (hasVisited) {
      loadingScreen.style.display = 'none';
      return;
    }

    // Scroll ni bloklash
    document.body.classList.add('no-scroll');

    // Mobile uchun - har bir qatorni bir xil kenglikka moslashtirish
    if (mobileText && window.innerWidth < 768) {
      const lines = mobileText.querySelectorAll('.text-line');
      const containerWidth = mobileText.offsetWidth;

      lines.forEach((line) => {
        const lineElement = line as HTMLElement;
        // Vaqtincha ko'rsatish (o'lchash uchun)
        lineElement.style.opacity = '0';
        lineElement.style.filter = 'none';
        lineElement.style.transform = 'none';

        // Hozirgi kenglikni o'lchash
        let fontSize = 10; // vw dan boshlaymiz
        lineElement.style.fontSize = `${fontSize}vw`;

        // Font-sizeni oshirib, container kengligiga moslashtirish
        while (lineElement.scrollWidth < containerWidth * 0.95 && fontSize < 30) {
          fontSize += 0.5;
          lineElement.style.fontSize = `${fontSize}vw`;
        }

        // Biroz kamaytirish (to'liq sig'ishi uchun)
        while (lineElement.scrollWidth > containerWidth && fontSize > 5) {
          fontSize -= 0.2;
          lineElement.style.fontSize = `${fontSize}vw`;
        }

        // Animatsiya uchun qayta yashirish
        lineElement.style.opacity = '0';
        lineElement.style.filter = 'blur(20px)';
        lineElement.style.transform = 'translateY(20px)';
      });
    }

    const lines = loadingScreen.querySelectorAll('.text-line');

    // Har bir qatorni ketma-ket animate qilish
    lines.forEach((line, index) => {
      setTimeout(() => {
        line.classList.add('visible');
      }, 100 + (index * 150));
    });

    // Fade out va scroll ni qaytarish
    setTimeout(() => {
      loadingScreen.classList.add('fade-out');
      sessionStorage.setItem('yuzinchi_visited', 'true');

      // Scroll ni qaytarish
      document.body.classList.remove('no-scroll');

      setTimeout(() => {
        loadingScreen.style.display = 'none';
      }, 500);
    }, 2500);
  }

  // DOM tayyor bo'lganda ishga tushirish
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLoadingScreen);
  } else {
    initLoadingScreen();
  }
</script>
