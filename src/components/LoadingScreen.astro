---
// Loading Screen Component
---

<div id="loading-screen">
  <div id="loading-content">
    <!-- Mobile: 4 qator -->
    <div class="mobile-text">
      <div class="text-line">Yuzinchi</div>
      <div class="text-line">bosqichga</div>
      <div class="text-line">chiqishga</div>
      <div class="text-line">tayyormisiz?</div>
    </div>

    <!-- Desktop: 2 qator -->
    <div class="desktop-text">
      <div class="text-line">Yuzinchi bosqichga</div>
      <div class="text-line">chiqishga tayyormisiz?</div>
    </div>
  </div>
</div>

<style>
  #loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262626;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    overflow: hidden;
  }

  #loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
  }

  .mobile-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .desktop-text {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .mobile-text {
      display: none;
    }
    .desktop-text {
      display: flex;
    }
  }

  .text-line {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 700;
    color: #628141;
    letter-spacing: -0.02em;
    text-align: center;
    line-height: 1.1;
    white-space: nowrap;
  }

  .mobile-text .text-line {
    width: 100%;
  }

  .mobile-text .text-line:nth-child(1) { font-size: 20vw; }
  .mobile-text .text-line:nth-child(2) { font-size: 17vw; }
  .mobile-text .text-line:nth-child(3) { font-size: 17vw; }
  .mobile-text .text-line:nth-child(4) { font-size: 13vw; }

  .desktop-text .text-line {
    font-size: 8vw;
  }

  @media (min-width: 1400px) {
    .desktop-text .text-line {
      font-size: 7rem;
    }
  }

  body.no-scroll {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  (function() {
    var loadingScreen = document.getElementById('loading-screen');
    var loadingContent = document.getElementById('loading-content');
    if (!loadingScreen || !loadingContent) return;

    // Faqat birinchi kirishda ko'rsatish
    var hasVisited = sessionStorage.getItem('yuzinchi_visited');

    if (hasVisited) {
      loadingScreen.style.display = 'none';
      return;
    }

    // Scroll ni bloklash
    document.body.classList.add('no-scroll');

    var lines = loadingScreen.querySelectorAll('.text-line');

    // Boshlang'ich holat - blur va invisible
    for (var i = 0; i < lines.length; i++) {
      lines[i].style.opacity = '0';
      lines[i].style.filter = 'blur(20px)';
      lines[i].style.transform = 'translateY(20px)';
      lines[i].style.transition = 'opacity 0.6s ease, filter 0.6s ease, transform 0.6s ease';
    }

    // Har bir qatorni ketma-ket ko'rsatish
    for (var i = 0; i < lines.length; i++) {
      (function(index) {
        setTimeout(function() {
          lines[index].style.opacity = '1';
          lines[index].style.filter = 'blur(0px)';
          lines[index].style.transform = 'translateY(0)';
        }, 100 + (index * 200));
      })(i);
    }

    // 3 soniyadan keyin chiqish animatsiyasi
    setTimeout(function() {
      // Text blur bo'ladi
      for (var i = 0; i < lines.length; i++) {
        lines[i].style.opacity = '0';
        lines[i].style.filter = 'blur(20px)';
        lines[i].style.transform = 'translateY(-10px)';
      }

      // Background ham blur bo'ladi
      loadingScreen.style.transition = 'opacity 0.8s ease, filter 0.8s ease';
      loadingScreen.style.filter = 'blur(20px)';
      loadingScreen.style.opacity = '0';

      sessionStorage.setItem('yuzinchi_visited', 'true');
      document.body.classList.remove('no-scroll');

      setTimeout(function() {
        loadingScreen.style.display = 'none';
      }, 800);
    }, 3000);
  })();
</script>
