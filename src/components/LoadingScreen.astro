---
// Loading Screen Component
// Mobile: 4 lines (equal width), Desktop: 2 lines
---

<div id="loading-screen" class="loading-screen">
  <div class="loading-content">
    <!-- Mobile: 4 qator -->
    <div class="mobile-text" id="mobile-text">
      <div class="text-line">Yuzinchi</div>
      <div class="text-line">bosqichga</div>
      <div class="text-line">chiqishga</div>
      <div class="text-line">tayyormisiz?</div>
    </div>

    <!-- Desktop: 2 qator -->
    <div class="desktop-text">
      <div class="text-line">Yuzinchi bosqichga</div>
      <div class="text-line">chiqishga tayyormisiz?</div>
    </div>
  </div>
</div>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #262626;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    transition: opacity 0.5s ease;
    overflow: hidden;
  }

  .loading-screen.fade-out {
    opacity: 0;
    pointer-events: none;
  }

  .loading-screen.hidden {
    display: none;
  }

  .loading-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 90%;
  }

  .mobile-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  .desktop-text {
    display: none;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .mobile-text {
      display: none;
    }
    .desktop-text {
      display: flex;
    }
  }

  .text-line {
    font-family: 'Space Grotesk', system-ui, sans-serif;
    font-weight: 700;
    color: #628141;
    letter-spacing: -0.02em;
    text-align: center;
    opacity: 0;
    filter: blur(20px);
    transform: translateY(20px);
    transition: opacity 0.8s ease, filter 0.8s ease, transform 0.8s ease;
    line-height: 1.1;
    white-space: nowrap;
  }

  .mobile-text .text-line {
    font-size: 15vw;
    width: 100%;
  }

  .mobile-text .text-line:nth-child(1) { font-size: 20vw; }
  .mobile-text .text-line:nth-child(2) { font-size: 17vw; }
  .mobile-text .text-line:nth-child(3) { font-size: 17vw; }
  .mobile-text .text-line:nth-child(4) { font-size: 13vw; }

  .desktop-text .text-line {
    font-size: 8vw;
  }

  @media (min-width: 1400px) {
    .desktop-text .text-line {
      font-size: 7rem;
    }
  }

  .text-line.visible {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }

  body.no-scroll {
    overflow: hidden;
    position: fixed;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  function initLoadingScreen() {
    var loadingScreen = document.getElementById('loading-screen');
    if (!loadingScreen) return;

    // Faqat birinchi kirishda ko'rsatish
    var hasVisited = sessionStorage.getItem('yuzinchi_visited');

    if (hasVisited) {
      loadingScreen.classList.add('hidden');
      return;
    }

    // Scroll ni bloklash
    document.body.classList.add('no-scroll');

    var lines = loadingScreen.querySelectorAll('.text-line');

    // Har bir qatorni ketma-ket animate qilish
    for (var i = 0; i < lines.length; i++) {
      (function(index) {
        setTimeout(function() {
          lines[index].classList.add('visible');
        }, 100 + (index * 150));
      })(i);
    }

    // Fade out
    setTimeout(function() {
      loadingScreen.classList.add('fade-out');
      sessionStorage.setItem('yuzinchi_visited', 'true');
      document.body.classList.remove('no-scroll');

      setTimeout(function() {
        loadingScreen.classList.add('hidden');
      }, 500);
    }, 2500);
  }

  // DOM tayyor bo'lganda
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initLoadingScreen);
  } else {
    initLoadingScreen();
  }
</script>
