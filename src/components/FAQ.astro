---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const faqs = [
  { question: t('faq.q1'), answer: t('faq.a1') },
  { question: t('faq.q2'), answer: t('faq.a2') },
  { question: t('faq.q3'), answer: t('faq.a3') },
  { question: t('faq.q4'), answer: t('faq.a4') }
];
---

<section class="section-padding">
  <div class="container-custom">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold text-light md:text-4xl">
        {t('faq.title')}
      </h2>
    </div>

    <div class="mx-auto mt-12 max-w-3xl">
      <div class="space-y-4">
        {faqs.map((faq, index) => (
          <div
            class="group rounded-2xl border border-light/5 bg-dark transition-all duration-300 hover:border-accent/20"
            data-faq-item
          >
            <button
              type="button"
              class="flex w-full items-center justify-between gap-4 p-6 text-left"
              aria-expanded="false"
              data-faq-trigger
            >
              <span class="text-lg font-medium text-light">
                {faq.question}
              </span>
              <svg
                class="h-5 w-5 shrink-0 text-accent transition-transform duration-300 ease-out"
                data-faq-icon
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </button>
            <div
              class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-out will-change-[grid-template-rows]"
              data-faq-content
            >
              <div class="overflow-hidden">
                <p class="px-6 pb-6 text-light/60">
                  {faq.answer}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  function initFAQ() {
    const items = document.querySelectorAll('[data-faq-item]');

    // Track which item is currently open
    let currentlyOpen: Element | null = null;

    // Close a specific FAQ item
    const closeItem = (item: Element) => {
      const trigger = item.querySelector('[data-faq-trigger]');
      const content = item.querySelector('[data-faq-content]') as HTMLElement;
      const icon = item.querySelector('[data-faq-icon]') as HTMLElement;

      if (!trigger || !content || !icon) return;

      trigger.setAttribute('aria-expanded', 'false');
      requestAnimationFrame(() => {
        content.style.gridTemplateRows = '0fr';
        icon.style.transform = 'rotate(0deg)';
      });
      item.classList.remove('border-accent/20');
      item.classList.add('border-light/5');
    };

    // Open a specific FAQ item
    const openItem = (item: Element) => {
      const trigger = item.querySelector('[data-faq-trigger]');
      const content = item.querySelector('[data-faq-content]') as HTMLElement;
      const icon = item.querySelector('[data-faq-icon]') as HTMLElement;

      if (!trigger || !content || !icon) return;

      trigger.setAttribute('aria-expanded', 'true');
      requestAnimationFrame(() => {
        content.style.gridTemplateRows = '1fr';
        icon.style.transform = 'rotate(45deg)';
      });
      item.classList.remove('border-light/5');
      item.classList.add('border-accent/20');
    };

    items.forEach((item) => {
      const trigger = item.querySelector('[data-faq-trigger]');

      if (!trigger) return;

      trigger.addEventListener('click', () => {
        const isCurrentlyOpen = currentlyOpen === item;

        // Close the currently open item (if any)
        if (currentlyOpen) {
          closeItem(currentlyOpen);
        }

        // If clicking on a different item, open it
        if (!isCurrentlyOpen) {
          openItem(item);
          currentlyOpen = item;
        } else {
          // Clicking on the same item that's open - just close it
          currentlyOpen = null;
        }
      });
    });
  }

  initFAQ();
  document.addEventListener('astro:after-swap', initFAQ);
</script>
