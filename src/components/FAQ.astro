---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const faqs = [
  { question: t('faq.q1'), answer: t('faq.a1') },
  { question: t('faq.q2'), answer: t('faq.a2') },
  { question: t('faq.q3'), answer: t('faq.a3') },
  { question: t('faq.q4'), answer: t('faq.a4') }
];
---

<section class="section-padding">
  <div class="container-custom">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-bold text-light md:text-4xl">
        {t('faq.title')}
      </h2>
    </div>

    <div class="mx-auto mt-12 max-w-3xl">
      <div class="space-y-4" data-faq-container>
        {faqs.map((faq) => (
          <details
            class="group rounded-2xl border border-light/5 bg-dark transition-colors duration-200 open:border-accent/20"
            data-faq-item
          >
            <summary
              class="flex w-full cursor-pointer list-none items-center justify-between gap-4 p-6 text-left [&::-webkit-details-marker]:hidden"
            >
              <span class="text-lg font-medium text-light">
                {faq.question}
              </span>
              <svg
                class="h-5 w-5 shrink-0 text-accent transition-transform duration-200 ease-out group-open:rotate-45"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                stroke-width="2"
              >
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </summary>
            <div class="px-6 pb-6">
              <p class="text-light/60">
                {faq.answer}
              </p>
            </div>
          </details>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  function initFAQ() {
    const container = document.querySelector('[data-faq-container]');
    if (!container) return;

    // Close other details when one opens (accordion behavior)
    container.addEventListener('click', (e) => {
      const summary = (e.target as HTMLElement).closest('summary');
      if (!summary) return;

      const currentDetails = summary.parentElement as HTMLDetailsElement;
      if (!currentDetails) return;

      // If opening this one, close others
      if (!currentDetails.open) {
        const allDetails = container.querySelectorAll('details[open]');
        allDetails.forEach((details) => {
          if (details !== currentDetails) {
            (details as HTMLDetailsElement).open = false;
          }
        });
      }
    });
  }

  initFAQ();
  document.addEventListener('astro:after-swap', initFAQ);
</script>
